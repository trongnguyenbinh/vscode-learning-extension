{
  "name": "vscode-learning-extension",
  "displayName": "VS Code Learning Extension",
  "description": "A comprehensive learning extension demonstrating webviews, commands, and VS Code API usage",
  "version": "1.0.0",
  "publisher": "learning-publisher",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Education"
  ],
  "keywords": [
    "learning",
    "webview",
    "tutorial",
    "demo",
    "device-management"
  ],
  "activationEvents": [
    "onCommand:vscode-learning-extension.openWebview"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-learning-extension.openWebview",
        "title": "Open Learning Extension",
        "category": "Learning"
      },
      {
        "command": "vscode-learning-extension.showMessage",
        "title": "Show Message",
        "category": "Learning"
      },
      {
        "command": "vscode-learning-extension.getWorkspaceInfo",
        "title": "Get Workspace Info",
        "category": "Learning"
      },
      {
        "command": "vscode-learning-extension.deviceManager",
        "title": "Device Manager",
        "category": "Learning"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "vscode-learning-extension.openWebview",
          "when": "true"
        }
      ],
      "explorer/context": [
        {
          "command": "vscode-learning-extension.openWebview",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "echo 'No compilation needed for JavaScript'",
    "watch": "echo 'No watch needed for JavaScript'",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext js",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/vscode-learning-extension.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/vscode-learning-extension/issues"
  },
  "homepage": "https://github.com/your-username/vscode-learning-extension#readme",
  "license": "MIT"
}
